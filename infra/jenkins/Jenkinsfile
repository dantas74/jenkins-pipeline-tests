pipeline {
  agent any

  options {
    buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')
    disableConcurrentBuilds()
  }

  triggers {
    GenericTrigger (
      genericVariables: [
        [key: 'pushRef', value: '$.ref', defaultValue: ''],
        [key: 'mergeRef', value: '$.pull_request.base.ref', defaultValue: ''],
        [key: 'branchRef', value: '$.pull_request.head.ref', defaultValue: ''],
        [key: 'mergeIsGoingToDeploy', value: '$.pull_request.merged', defaultValue: ''],
        [key: 'mergeAction', value: '$.action', defaultValue: '']
      ],
      token: 'proesc-backend'
    )
  }

  stages {
    stage('Checkout SCM') {
      steps {
        checkout([
          $class: 'GitSCM',
          branches: [
            [name: '*/develop'],
            [name: '*/release*'],
            [name: '*/main'],
            [name: '*/feature*'],
            [name: '*/hotfix*'],
            [name: '*/bugfix*']
          ],
          extensions: [[$class: 'CleanCheckout']],
          doGenerateSubmoduleConfigurations: false,
          submoduleCfg: [],
          userRemoteConfigs: [[credentialsId: 'proesc-ssh-key', url: 'git@github.com:matheus-dr/test-multibranch.git']]
        ])
      }
    }

    stage('Setup') {
      steps {
        script {
          // Defining vars to use in script
          def mergeIsGoingToDeploy = env.mergeIsGoingToDeploy != '' ? true : false
          def mergeRef = env.mergeRef
          def branchRef = env.branchRef
          def pushRef = env.pushRef
          def action = env.mergeAction

          // Checking if is going to deploy based on merge or push
          env.isGoingToDeploy = mergeIsGoingToDeploy ?: pushRef ==~ /^refs\/heads\/(develop|release|main).*$/

          // Validation of auxiliary branches
          env.auxiliaryCi = (
            branchRef ==~ /^(feature|hotfix|bugfix).*$/ && (action == 'opened' || action == 'reopened')
          )

          // Validation of dev environment
          env.devCiCd = (
            mergeRef == 'develop' && env.isGoingToDeploy
          ) || (pushRef == 'refs/heads/develop') || (
            branchRef ==~ /^(feature|hotfix|bugfix).*$/ && action == 'closed'
          )

          // Validation of qa environment
          env.qaCiCd = (
            mergeRef ==~ /release.*$/ && env.isGoingToDeploy
          ) || (pushRef ==~ /refs\/heads\/release.*$/)

          // Validation of prod environment
          env.prodCiCd = (
            mergeRef == 'main' && env.isGoingToDeploy
          ) || (pushRef == 'refs/heads/main') || (
            branchRef ==~ /^hotfix.*$/ && action == 'closed'
          )
        }
      }
    }

    stage('Auxiliary branch') {
      steps {
        build job: 'proesc-backend/ci-auxiliary',
          parameters: [string(name: 'branchName', value: branchRef)],
          wait: false,
          propagate: false
      }

      when {
        expression {
          return env.auxiliaryCi.toBoolean()
        }
      }
    }

    stage('Dev Environment') {
      steps {
        build job: 'proesc-backend/ci-dev',
          parameters: [booleanParam(name: 'isGoingToDeploy', value: isGoingToDeploy)],
          wait: false,
          propagate: false
      }

      when {
        expression {
          return env.devCiCd.toBoolean()
        }
      }
    }

    stage('Qa Environment') {
      steps {
        // TODO: Change job to correct pipeline
        build job: 'proesc-backend/ci-dev',
          parameters: [booleanParam(name: 'isGoingToDeploy', value: isGoingToDeploy)],
          wait: false,
          propagate: false
      }

      when {
        expression {
          return env.qaCiCd.toBoolean()
        }
      }
    }

    stage('Prod Environment') {
      steps {
        // TODO: Change job to correct pipeline
        build job: 'proesc-backend/ci-dev',
          parameters: [booleanParam(name: 'isGoingToDeploy', value: isGoingToDeploy)],
          wait: false,
          propagate: false
      }

      when {
        anyOf {
          expression {
            return env.prodCiCd.toBoolean()
          }
        }
      }
    }
  }
}